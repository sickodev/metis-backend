{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"],
      "@routes/*": ["routes/*"],
      "@handlers/*": ["handlers/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "exclude": ["node_modules"]
}